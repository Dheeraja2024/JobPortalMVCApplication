
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserHome</h2>
<div>
    // @Html.ActionLink("Search Job", "DisplayAllJob_Pageload", "JobSearch")
    <table class="table">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Skills</th>
                <th>Experience</th>
                <th>Job Status</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.)
            {
<tr>
    <td>@job.JobTitle</td>
    <td>@job.fk_CompanyId</td>
    <td>@job.Skills</td>
    <td>@job.Experience</td>
    <td>@job.SalaryRange</td>
    <td>@job.Location</td>
    <td>
        <a href="@Url.Action("Details", "Job", new { id = job.JobId })" class="btn btn-primary">View</a>
    </td>
</tr>}
        </tbody>
    </table>
</div>

